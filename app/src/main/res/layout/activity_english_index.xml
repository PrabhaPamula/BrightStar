<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/english_index_bg"
    android:orientation="vertical"
    tools:context=".english_index">

    <Button
        android:id="@+id/engtocontent"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:gravity="center"
        android:textSize="40sp"
        android:translationY="5dp"
        tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/exiteng"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="-15dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/ic_round_exit_to_app_24"
        android:translationX="360dp"
        android:translationY="-30dp"
        tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="258dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:translationY="-50dp"
        app:srcCompat="@drawable/english_index_logo"
        tools:ignore="SpeakableTextPresentCheck,ContentDescription,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/engtorhy"
        android:layout_width="65dp"
        android:layout_height="52dp"
        android:src="@drawable/engindex_nextbutton"
        android:translationX="300dp"
        android:translationY="5dp"
        tools:ignore="SpeakableTextPresentCheck, ContentDescription" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="246dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:text="@string/rhymingindex"
        android:textAllCaps="false"
        android:textColor="#ED0554"
        android:textSize="48sp"
        android:translationX="-30dp"
        android:translationY="-130dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="246dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:text="@string/alphabetsindex"
        android:textAllCaps="false"
        android:textColor="#ED0554"
        android:textSize="48sp"
        android:translationX="-30dp"
        android:translationY="-155dp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="246dp"
        android:layout_height="122dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:text="@string/sentenceformationindex"
        android:textAllCaps="false"
        android:textColor="#ED0554"
        android:textSize="48sp"
        android:translationX="-30dp"
        android:translationY="-180dp"
        tools:ignore="TextContrastCheck" />

    <ImageButton
        android:id="@+id/engtosen"
        android:layout_width="62dp"
        android:layout_height="59dp"
        android:src="@drawable/engindex_nextbutton"
        android:translationX="300dp"
        android:translationY="-265dp"
        tools:ignore="SpeakableTextPresentCheck, ContentDescription" />

    <ImageButton
        android:id="@+id/engtoalp"
        android:layout_width="65dp"
        android:layout_height="59dp"
        android:src="@drawable/engindex_nextbutton"
        android:translationX="300dp"
        android:translationY="-455dp"
        tools:ignore="SpeakableTextPresentCheck, ContentDescription" />


</LinearLayout>