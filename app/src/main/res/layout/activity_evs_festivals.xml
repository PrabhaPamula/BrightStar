<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/evs_bg2"
    android:orientation="vertical"
    tools:context=".evs_festivals">

    <Button
        android:id="@+id/festoevs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:gravity="center"
        android:textSize="40sp"
        android:translationX="45dp"
        android:translationY="50dp"
        tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/evs_festivals"
        android:textColor="#F57F17"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/exitfes1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/ic_round_exit_to_app_24"
        android:translationX="300dp"
        android:translationY="-55dp"
        tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/textView28"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:text="@string/which_festival_is_considered_as_festival_of_lights"
        android:textColor="#FF0101"
        android:textSize="35sp"
        android:translationY="-30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fesonewro2"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#CA54F4"
        android:text="@string/holi"
        android:textSize="45sp"
        android:translationX="30dp"
        tools:ignore="ButtonStyle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fesonewro1"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#CA54F4"
        android:text="@string/eid"
        android:textSize="45sp"
        android:translationX="195dp"
        android:translationY="-60dp"
        tools:ignore="ButtonStyle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fesonewro3"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#CA54F4"
        android:text="@string/navratri"
        android:textSize="35sp"
        android:translationX="10dp"
        android:translationY="-3dp"
        tools:ignore="ButtonStyle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fesonecor"
        android:layout_width="127dp"
        android:layout_height="62dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#CA54F4"
        android:text="@string/diwali"
        android:textSize="35sp"
        android:translationX="200dp"
        android:translationY="-65dp"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/fesoneto2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#CA54F4"
        android:text="@string/nextQuestion"
        android:textSize="25sp"
        android:translationY="-15dp" />


</LinearLayout>