<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/evs_bg2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".evs_animals">


    <Button
        android:id="@+id/anitoevs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:gravity="center"
        android:textSize="40sp"
        android:translationX="45dp"
        android:translationY="50dp"
        tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="159dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/evs_animals2"
        android:textColor="#F57F17"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="TextContrastCheck,TextContrastCheck" />

    <Button
        android:id="@+id/exitani1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="13dp"
        android:background="@drawable/ic_round_exit_to_app_24"
        android:translationX="300dp"
        android:translationY="-55dp"
        tools:ignore="TextContrastCheck,SpeakableTextPresentCheck" />



    <TextView
        android:id="@+id/textView21"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center_horizontal"
        android:text="@string/evs_national_animal_of_india"
        android:textColor="#FF0101"
        android:textSize="40sp"
        android:translationY="-30dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/anionecor"
        android:layout_width="146dp"
        android:layout_height="75dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#F474A6"
        android:text="@string/tiger"
        android:textSize="40sp"
        android:translationX="20dp"
        tools:ignore="ButtonStyle,DuplicateSpeakableTextCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/anionewro1"
        android:layout_width="146dp"
        android:layout_height="79dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#F474A6"
        android:text="@string/wolf"
        android:textSize="40sp"
        android:translationX="20dp"
        android:translationY="50dp"
        tools:ignore="ButtonStyle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/anionewro3"
        android:layout_width="146dp"
        android:layout_height="79dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#F474A6"
        android:text="@string/lion"
        android:textSize="40sp"
        android:translationX="180dp"
        android:translationY="-155dp"
        tools:ignore="ButtonStyle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/anionewro2"
        android:layout_width="146dp"
        android:layout_height="79dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="#F474A6"
        android:text="@string/horse"
        android:textSize="38sp"
        android:translationX="180dp"
        android:translationY="-110dp"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/anioneto2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#F474A6"
        android:text="@string/nextQuestion"
        android:textSize="25sp"
        android:translationY="-55dp" />




</LinearLayout>
